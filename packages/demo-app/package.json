        "@types/jasmine": "^3.7.1",
        "@types/node": "22.13.10",
        "@types/uuid": "^8.3.0",
        "got": "^9.6.0",
        "jasmine": "^3.7.0",
        "jasmine-spec-reporter": "^7.0.0",
        "jasmine-ts": "^0.3.3",
        "nodemon": "^2.0.7",
        "ts-node": "^10.0.0",
        "typescript": "5.4.5"
